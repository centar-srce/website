---
import getArticles from '../../getArticles';

const articles = getArticles();

import Layout from '../../layouts/Layout.astro';
import Link from '../../components/Link.astro';
---

<Layout>
	<h1>Vesti</h1>
	<ul>
		{
			articles.map(({ title, slug }) => (
				<li>
					<Link to={`/vesti/${slug}`}>{title}</Link>
				</li>
			))
		}
	</ul>
</Layout>
